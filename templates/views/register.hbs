<body>
{{>navbar}}

    {{>headerlinks}}
    <form action="register" method="POST" enctype="multipart/form-data" class="formData">
    <div class="container">


<div class="form-floating">
  <input name="name" type="text" class="form-control " id="name" placeholder="Full name">
  <label for="full-name">Full name</label>
</div>

  <div class="form-floating">
  <input name="email"
            id="email"
            value=""
            type="email"
            placeholder="me@example.com"
            class="form-control"
            required >
  <label for="email">Email</label>
</div>
   <div class="form-floating">
  <input name="phone"
            id="phone"
            value=""
            type="number"
            placeholder="+91 0000000000"
            class="form-control"
            required >
  <label for="phone">Phone</label>
</div>
    <div class="form-floating">
  <input name="companyName"
            id="company-name"
            value=""
            type="text"
            placeholder="Optional"
            class="form-control"
            required >
  <label for="company-name">companyName</label>
</div>

<div class="input-group">
  {{!-- <label class="input-group-text" for="profileImage">Image</label> --}}
  <input name="filename" id="myfile" value=""
            type="file"class="form-control" required>
</div>
   <div class="form-floating">
  <input name="password"
            id="password"
            value=""
            type="password"
            placeholder="password"
            class="form-control"
            required >
  <label for="password">Password</label>
</div>
         <div class="row mb-3">
    <div class="col-sm-10 offset-sm-2">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" id="gridCheck1">
        <label class="form-check-label" for="gridCheck1">
          Register checkbox
        </label>
      </div>
    </div>
  </div>
        <button type="submit" class="btn btn-primary btn-register">Register</button>
    </div>
</form>
 {{#if message}}
     <div class="mt-4">
      <h4 class="alert alert-denger">{{message}}</h4>
      </div>
      {{/if}}

</body>
</html>

    
